<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>C# by Example: {{Name}}</title>
    <link rel=stylesheet href="site.css">
</head>
<script>
    onkeydown = (e) => {
        {{if PrevExample}}
        if (e.key == "ArrowLeft") {
            window.location.href = '{{PrevExample.FileName}}';
        }
        {{end}}
        {{if NextExample}}
        if (e.key == "ArrowRight") {
            window.location.href = '{{NextExample.FileName}}';
        }
        {{end}}
    }
</script>
<body>
<div class="example" id="{{ID}}">
    <h2><a href="./">C# by Example</a>: {{Name}}</h2>
{{#Scripts}}
<Table> 
{{#Segments}}
<tr>
    <td class="docs">
        {{{DocsRendered}}}
    </td>
<td class="code{{if .CodeEmpty}} empty{{end}}{{if CodeLeading}} leading{{end}}">
{{end}}
{{{CodeRendered}}}
</td>
</tr>
{{/Segments}}
</table>
{{/Scripts}}
    <hr />
{{end}}    
{{#NextExample}}
    <p class="next">
        Next example: <a href="{{NextExample.ID}}">{{NextExample.Name}}</a>.
    </p>
{{/NextExample}}
{{ template "footer" }}
</div>
</body>
</html>